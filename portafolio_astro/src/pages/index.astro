---
import Layout from '../layouts/Layout.astro';
import HeaderWrapper from '../components/HeaderWrapper.tsx';
import Hero from '../components/Hero.tsx';
import About from '../components/About.tsx';
import Experience from '../components/Experience.tsx';
import Projects from '../components/Projects.tsx';
import Contact from '../components/Contact.tsx';
---

<Layout title="Alexis Palacio - Portfolio" description="Portafolio de Alexis Palacio — Full‑Stack y automatización con n8n, LLMs (Ollama/Router), MCP, Supabase y AWS">
  <HeaderWrapper client:load />
  
  <main class="pt-16">
    <section id="home"><Hero client:idle /></section>
    <section id="about"><About client:visible /></section>
    <section id="experience"><Experience client:visible /></section>
    <section id="projects"><Projects client:visible /></section>
    <section id="contact"><Contact client:visible /></section>
  </main>

  <footer class="py-8">
    <div class="container text-center">
      <div class="neo-inset p-6 rounded-[var(--neo-radius-lg)] inline-block">
        <p style="color: var(--neo-muted)">© 2024 Alexis Palacio. Todos los derechos reservados.</p>
        <div class="flex justify-center gap-6 mt-4" style="color: var(--neo-muted)">
          <a href="#" class="hover:opacity-80">Términos</a>
          <a href="#" class="hover:opacity-80">Privacidad</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>

